@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar sesion";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Click aqui para cerrar sesion</button>
            </form>
        }
        else
        {
            <p>Ha cerrado sesion del sistema exitosamente.</p>
        }
    }
</header>

<script>
    (() => {
        document.getElementById('logoutForm').submit();
    })()
</script>

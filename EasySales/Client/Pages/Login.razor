@using EasySales.Shared
@page "/login"

<PageTitle>Inicio Sesion</PageTitle>

<h2>Inicio de Sesion</h2>

@if (ShowAuthError)
{
    <div class="alert alert-danger" role="alert">
        <p>@Error</p>
    </div>
}

<div class="row">
    <div class="col-md-10">
        <section>
            <h3>Usa tu cuenta de correo para iniciar sesion.</h3>
            <hr />
            <EditForm Model="loginModel" OnValidSubmit="ExecuteLogin" class="card card-body bg-light mt-5">
                <DataAnnotationsValidator />
                <div class="form-group row">
                    <label for="email" class="col-md-2 col-form-label">Email:</label>
                    <div class="col-md-10">
                        <InputText id="email" class="form-control" @bind-Value="loginModel.Email" autocomplete="username" aria-required="true" />
                        <ValidationMessage For="@(() => loginModel.Email)" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-md-2 col-form-label">Contraseña:</label>
                    <div class="col-md-10">
                        <InputText type="password" id="password" class="form-control" @bind-Value="loginModel.Password" autocomplete="current-password" aria-required="true" />
                        <ValidationMessage For="@(() => loginModel.Password)" />
                    </div>
                </div>

                <div class="row mt-1">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Iniciar Sesion</button>
                    </div>
                </div>
                <div class="mt-2">
                    <p>
                        <a href="/identity/account/ForgotPassword">¿Olvido su contraseña?</a>
                    </p>
                    <p>
                        <a href="/identity/account/Register">Registrar nuevo usuario.</a>
                    </p>
                    <p>
                        <a href="/identity/account//ResendEmailConfirmation">Reenviar correo de confirmacion.</a>
                    </p>
                </div>
            </EditForm>
        </section>
    </div>
</div>